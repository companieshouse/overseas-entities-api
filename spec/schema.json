{
  "swagger": "2.0",
  "info": {
    "description": "An API to allow registration of overseas entities",
    "version": "1.0.0",
    "title": "Companies House - Overseas Entities API"
  },
  "host": "api.companieshouse.gov.uk",
  "schemes": [
    "https"
  ],
  "tags": [
    {
      "name": "Overseas Entity"
    }
  ],
  "paths": {
    "/transactions/{transaction_id}/overseas-entity/": {
      "parameters": [
        {
          "name": "transaction_id",
          "in": "path",
          "required" : true,
          "type" : "string"
        }
      ],
      "post": {
        "summary": "Create an overseas entity registration submission",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "Overseas Entity Submission",
            "in": "body",
            "required" : true,
            "schema": {
              "$ref": "#/definitions/OverseasEntitySubmission"
            }
          }
        ],
        "tags": [
          "Overseas Entity"
        ],
        "responses": {
          "201": {
            "description": "Overseas Entity Submission has been successfully created.",
            "schema": {
              "$ref": "#/definitions/OverseasEntitySubmissionCreatedResponse"
            }
          },
          "401":{
            "description": "Unauthorised"
          }
        }
      }
    },
    "/transactions/{transaction_id}/overseas-entity/{overseas_entity_id}/validation-status": {
      "parameters": [
        {
          "name": "transaction_id",
          "in": "path",
          "required": true,
          "type": "string"
        },
        {
          "name": "overseas_entity_id",
          "in": "path",
          "required": true,
          "type": "string"
        }
      ],
      "get": {
        "summary": "Verify that all the tasks for the Specified Overseas Entities Submission have been completed",
        "produces": [
          "application/json"
        ],
        "tags": [
          "Validation Status"
        ],
        "responses": {
          "200": {
            "description": "The Specified Overseas Entities Submission tasks have been completed.",
            "schema": {
              "$ref": "#/definitions/ValidationStatusResponse"
            }
          },
          "400": {
            "description": "A provided url id failed validation"
          },
          "401":{
            "description": "Unauthorised"
          },
          "404": {
            "description": "Submission not found"
          }
        }
      }
    },
    "/private/transactions/{transaction_id}/overseas-entity/{overseas_entity_id}/filings": {
      "parameters": [
        {
          "name": "transaction_id",
          "in": "path",
          "required" : true,
          "type" : "string"
        },
        {
          "name": "overseas_entity_id",
          "in": "path",
          "required": true,
          "type": "string"
        }
      ],
      "get": {
        "summary": "Gets filing data ready to send to CHIPS",
        "produces": [
          "application/json"
        ],
        "tags": [
          "Filings"
        ],
        "responses": {
          "200": {
            "description": "Filing data",
            "schema": {
              "$ref": "#/definitions/FilingAPIResponse"
            }
          },
          "400": {
            "description": "A provided url id failed validation"
          },
          "401":{
            "description": "Unauthorised"
          },
          "404": {
            "description": "Submission not found"
          }
        }
      }
    }
  },
  "definitions": {
    "OverseasEntitySubmission": {
      "type": "object",
      "properties": {
        "presenter": {
          "$ref": "#/definitions/Presenter"
        },
        "entity": {
          "$ref": "#/definitions/Entity"
        }
      },
      "required": [
        "presenter",
        "entity"
      ]
    },
    "Presenter": {
      "type": "object",
      "properties": {
        "full_name": {
          "type": "string"
        },
        "phone_number": {
          "type": "string"
        },
        "role": {
          "type": "string",
          "enum": [
            "administrator",
            "agent",
            "solicitor",
            "beneficial_owner",
            "other"
          ]
        },
        "role_title": {
          "type": "string"
        },
        "anti_money_laundering_registration_number": {
          "type": "string"
        }
      },
      "required": [
        "full_name",
        "phone_number",
        "role",
        "role_title"
      ]
    },
    "Entity": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "incorporation_country": {
          "type": "string"
        },
        "principal_address": {
          "$ref": "#/definitions/Address"
        },
        "service_address": {
          "$ref": "#/definitions/Address"
        },
        "is_service_address_same_as_principal_address": {
          "type": "boolean"
        },
        "email": {
          "type": "string"
        },
        "legal_form": {
          "type": "string"
        },
        "law_governed": {
          "type": "string"
        },
        "public_register_name": {
          "type": "string"
        },
        "registration_number": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "incorporation_country",
        "principal_address",
        "is_service_address_same_as_principal_address",
        "email",
        "legal_form",
        "law_governed",
        "public_register_name",
        "registration_number"
      ]
    },
    "Address": {
      "type": "object",
      "properties": {
        "property_name_number": {
          "type": "string"
        },
        "line_1": {
          "type": "string"
        },
        "line_2": {
          "type": "string"
        },
        "town": {
          "type": "string"
        },
        "county": {
          "type": "string"
        },
        "country": {
          "type": "string"
        },
        "postcode": {
          "type": "string"
        }
      },
      "required": [
        "line_1",
        "town",
        "county",
        "postcode"
      ]
    },
    "OverseasEntitySubmissionCreatedResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        }
      }
    },
    "FilingAPIResponse": {
      "type": "object",
      "properties": {
        "data": {
          "$ref": "#/definitions/Data"
        },
        "description": {
          "type": "string"
        },
        "description_identifier": {
          "type": "string"
        },
        "description_values": {
          "$ref": "#/definitions/Description"
        },
        "kind": {
          "type": "string"
        }
      }
    },
    "Data": {
      "type": "object",
      "properties": {
        "key": {
          "type": "string"
        },
        "value": {
          "type": "object"
        }
      }
    },
    "Description": {
      "type": "object",
      "properties": {
        "key": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      }
    },
    "ValidationStatusResponse": {
      "type": "object",
      "properties": {
        "is_valid": {
          "type": "boolean"
        },
        "errors": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ValidationStatusError"
          }
        }
      }
    },
    "ValidationStatusError": {
      "type": "object",
      "properties": {
        "error": {
          "type": "string"
        },
        "location": {
          "type": "string"
        },
        "location_type": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      }
    }
  }
}